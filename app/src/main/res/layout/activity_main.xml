<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/info_element_height"
        android:background="@color/color_grey"
        android:orientation="horizontal"
        android:gravity="center"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/info_rating"
                style="@style/MyStileHeadNumberStyle"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/info_rating_text"
                style="@style/MyStileHeadTextStyle"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_weight="2">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/info_code_amount"
                style="@style/MyStileHeadNumberStyle"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/info_code_amount_text"
                style="@style/MyStileHeadTextStyle"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/info_projects_amount"
                style="@style/MyStileHeadNumberStyle"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/info_projects_amount_text"
                style="@style/MyStileHeadTextStyle"/>
        </LinearLayout>

    </LinearLayout>
    
    <LinearLayout
        style="@style/MyStyleInfoList">

        <ImageView
            style="@style/MyStyleIconLeft"
            android:contentDescription="@string/DescriptionPhone"
            android:src="@drawable/ic_call_black_24dp"/>

        <LinearLayout
            style="@style/MyStyleInfoListContent"
            android:background="@color/color_light_blue">
            <android.support.design.widget.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <EditText
                    style="@style/MyStyleInfoListEditText"
                    android:hint="@string/mobile_phone"
                    android:text="@string/my_phone"
                    android:inputType="phone"/>
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <ImageView
            style="@style/MyStyleIconRight"
            android:contentDescription="@string/DescriptionPhone"
            android:src="@drawable/ic_phone_in_talk_black_24dp"/>

    </LinearLayout>
    
    <View
        style="@style/MyStyleLineStyle">
    </View>

</LinearLayout>
