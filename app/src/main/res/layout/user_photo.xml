<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/profile_place_holder"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/user_bg"
    android:visibility="gone">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/photo_place_holder"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/size_8"
        android:text="@string/change_user_photo"
        android:textColor="@color/color_white"
        android:textSize="@dimen/size_24"/>

    <ImageView
        android:id="@+id/photo_place_holder"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/size_56"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_perm_camera_m48px" />
</RelativeLayout>