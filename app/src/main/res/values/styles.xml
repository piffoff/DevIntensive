<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <style name="MyStileHeadTextStyle">
        <item name="android:textSize">@dimen/size_16</item>
        <item name="android:textColor">@color/color_grey_light</item>
    </style>

    <style name="MyStileHeadNumberStyle">
        <item name="android:textSize">@dimen/size_32</item>
        <item name="android:textColor">@color/color_grey_light</item>
    </style>

    <style name="MyStyleIcon">
        <item name="android:layout_width">@dimen/size_24</item>
        <item name="android:layout_height">@dimen/size_24</item>
        <item name="android:layout_marginTop">@dimen/size_24</item>
    </style>

    <style name="MyStyleIconLeft" parent="MyStyleIcon">
        <item name="android:layout_marginLeft">@dimen/size_16</item>
    </style>

    <style name="MyStyleIconRight" parent="MyStyleIcon">
        <item name="android:layout_marginRight">@dimen/size_32</item>
    </style>

    <style name="MyStyleInfoList">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/size_8</item>
        <item name="android:layout_marginBottom">@dimen/size_8</item>
    </style>

    <style name="MyStyleInfoListContent">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/info_list_element_height</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/size_32</item>
        <item name="android:layout_marginRight">@dimen/size_16</item>
    </style>

    <style name="MyStyleInfoListEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:textColorHint">@color/color_grey</item>
        <item name="android:enabled">false</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="MyStyleLineStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/line_size</item>
        <item name="android:background">@color/color_grey</item>
        <item name="android:layout_marginLeft">@dimen/size_72</item>
    </style>

    <style name="custom_dialog">
        <item name="android:fullDark">@android:color/transparent</item>
    </style>

    <style name="MyMenuHeadText">
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">14sp</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"></style>
    
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark"></style>

    <!-- Authorization screen -->

    <style name="authorization_LL_infoBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_48</item>
        <item name="android:gravity">bottom</item>
        <item name="android:layout_marginTop">@dimen/size_8</item>
        <item name="android:layout_marginLeft">@dimen/size_24</item>
        <item name="android:layout_marginRight">@dimen/size_24</item>
    </style>

    <style name="authorization_editText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/color_grey</item>
        <item name="android:textColorHint">@color/color_grey_light</item>
        <item name="android:textSize">@dimen/size_12</item>
    </style>

</resources>